# ============================================================================
# BailBondPro - Environment Variables Template
# ============================================================================
# 
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control
#
# ============================================================================

# ============================================================================
# Application Configuration
# ============================================================================

# Application Environment (development, staging, production)
NODE_ENV=development

# Application URL and Port
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000

# Application Name and Version
NEXT_PUBLIC_APP_NAME=BailBondPro
NEXT_PUBLIC_APP_VERSION=1.0.0

# ============================================================================
# Database Configuration
# ============================================================================

# Primary Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/bailbondpro_dev

# Database Pool Configuration
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Test Database
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/bailbondpro_test

# ============================================================================
# Redis Configuration (Caching & Sessions)
# ============================================================================

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_TIMEOUT=86400000

# ============================================================================
# Authentication & Security
# ============================================================================

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Password Hashing
BCRYPT_ROUNDS=12

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# ============================================================================
# Payment Processing (Stripe)
# ============================================================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Stripe Product IDs
STRIPE_BASIC_PLAN_ID=price_basic_plan_id
STRIPE_PREMIUM_PLAN_ID=price_premium_plan_id
STRIPE_ENTERPRISE_PLAN_ID=price_enterprise_plan_id

# ============================================================================
# Email Configuration
# ============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
FROM_EMAIL=noreply@bailbondpro.com
FROM_NAME=BailBondPro

# SendGrid (Alternative)
SENDGRID_API_KEY=your_sendgrid_api_key

# ============================================================================
# File Storage & CDN
# ============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=bailbondpro-documents

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Local File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ============================================================================
# External API Integrations
# ============================================================================

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Twilio (SMS/Voice)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# DocuSign (Document Signing)
DOCUSIGN_INTEGRATION_KEY=your_docusign_integration_key
DOCUSIGN_USER_ID=your_docusign_user_id
DOCUSIGN_ACCOUNT_ID=your_docusign_account_id
DOCUSIGN_PRIVATE_KEY_PATH=./keys/docusign_private.key

# Credit Check API
CREDIT_CHECK_API_KEY=your_credit_check_api_key
CREDIT_CHECK_API_URL=https://api.creditcheck.com

# Background Check API
BACKGROUND_CHECK_API_KEY=your_background_check_api_key
BACKGROUND_CHECK_API_URL=https://api.backgroundcheck.com

# ============================================================================
# Monitoring & Analytics
# ============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=GA-XXXXXXXXX

# Mixpanel (Analytics)
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# New Relic (Performance Monitoring)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=BailBondPro

# LogRocket (Session Replay)
NEXT_PUBLIC_LOGROCKET_APP_ID=your_logrocket_app_id

# ============================================================================
# Logging Configuration
# ============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log File Path
LOG_FILE_PATH=./logs/app.log

# Enable Console Logging
LOG_CONSOLE=true

# ============================================================================
# Feature Flags
# ============================================================================

# Feature Toggles
FEATURE_ADVANCED_REPORTING=true
FEATURE_MOBILE_APP=true
FEATURE_DOCUMENT_SIGNING=true
FEATURE_CREDIT_CHECKS=true
FEATURE_BACKGROUND_CHECKS=true
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_PAYMENT_PLANS=true

# ============================================================================
# Development & Testing
# ============================================================================

# Debug Mode
DEBUG=bailbondpro:*

# Test Configuration
TEST_TIMEOUT=30000
TEST_PARALLEL=true

# Seed Data
SEED_ADMIN_EMAIL=admin@bailbondpro.com
SEED_ADMIN_PASSWORD=admin123

# ============================================================================
# Security Headers & HTTPS
# ============================================================================

# SSL Configuration
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Security Headers
HELMET_ENABLED=true
HSTS_MAX_AGE=31536000

# ============================================================================
# Backup & Maintenance
# ============================================================================

# Database Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=bailbondpro-backups

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# ============================================================================
# Compliance & Legal
# ============================================================================

# Data Retention
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=3650

# Privacy Policy
PRIVACY_POLICY_URL=https://bailbondpro.com/privacy
TERMS_OF_SERVICE_URL=https://bailbondpro.com/terms

# ============================================================================
# Performance & Caching
# ============================================================================

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# CDN Configuration
CDN_URL=https://cdn.bailbondpro.com

# Database Query Timeout
DB_QUERY_TIMEOUT=30000

# ============================================================================
# Mobile App Configuration
# ============================================================================

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id

# Deep Linking
DEEP_LINK_SCHEME=bailbondpro
UNIVERSAL_LINK_DOMAIN=bailbondpro.com

# ============================================================================
# Webhooks & Integrations
# ============================================================================

# Webhook URLs
WEBHOOK_PAYMENT_SUCCESS=https://your-app.com/webhooks/payment-success
WEBHOOK_PAYMENT_FAILED=https://your-app.com/webhooks/payment-failed
WEBHOOK_CONTRACT_SIGNED=https://your-app.com/webhooks/contract-signed

# Integration Secrets
INTEGRATION_SECRET_KEY=your_integration_secret_key

# ============================================================================
# Development Tools
# ============================================================================

# Hot Reload
FAST_REFRESH=true

# Bundle Analyzer
ANALYZE_BUNDLE=false

# Source Maps
GENERATE_SOURCEMAP=true

# ============================================================================
# Notes
# ============================================================================
#
# 1. Replace all placeholder values with your actual configuration
# 2. Keep sensitive values secure and never commit them to version control
# 3. Use different values for development, staging, and production environments
# 4. Regularly rotate API keys and secrets
# 5. Use environment-specific .env files (.env.development, .env.production)
#